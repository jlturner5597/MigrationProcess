        +ExecuteMigration()
        +RollbackChanges()
    }
    
    class ExceptionHandler {
        +LogExceptions()
        +HandleGracefully()
        +NotifyAdmins()
    }
    
    class TestSuite {
        +AutomatedTests[]
        +ManualTests[]
        +RunTests()
        +GenerateReport()
